<ldap-configuration>

    <host>localhost</host>
    <port>40636</port>
    <protocol>ldaps</protocol>
    <username>admin</username>
    <password>password</password>
    <!-- TODO: Change this to "principal" when testing against a real Active Directory server -->
    <loginMode>anonymous</loginMode>
    <timeout>30000</timeout>
    <rootDn>dc=carlspring,dc=com</rootDn>

    <attribute-mappings>
        <user-mapping>
            <uid>uid</uid>
            <password>userPassword</password>
            <fullName>cn</fullName>
            <email>mail</email>

            <filter></filter>

            <query>
                <objectClass>inetOrgPerson</objectClass>
                <baseDn>dc=carlspring,dc=com</baseDn>
            </query>
        </user-mapping>
        <group-mapping>
            <groupId>cn</groupId>
            <groupMember>uniqueMember</groupMember>

            <query>
                <objectClass>groupOfUniqueNames</objectClass>
                <baseDn>ou=groups</baseDn>
            </query>
        </group-mapping>
    </attribute-mappings>

</ldap-configuration>